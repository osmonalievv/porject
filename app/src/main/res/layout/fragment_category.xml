<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.categoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/button5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginStart="16sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="16sp"
                android:background="@drawable/shape_radius"
                android:backgroundTint="@color/category_search" />

            <ImageView
                android:id="@+id/imageView24"
                app:layout_constraintBottom_toBottomOf="@+id/button5"
                app:layout_constraintStart_toStartOf="@+id/button5"
                app:layout_constraintTop_toTopOf="@+id/button5"
                app:srcCompat="@drawable/seacrh_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:contentDescription="@string/for_images" />

            <HorizontalScrollView
                android:id="@+id/hor3"
                style="@style/for_scroll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button5"
                android:layout_marginTop="7sp"
                android:scrollbarThumbHorizontal="@color/prok">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15sp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/button7"
                        style="@style/for_medium_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="140sp"
                        android:layout_height="40sp"
                        android:background="@drawable/shape_radius"
                        android:backgroundTint="@color/black"
                        android:text="@string/best1"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/button8"
                        style="@style/for_medium_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="200sp"
                        android:layout_height="40sp"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/shape_radius"
                        android:backgroundTint="@color/white"
                        android:text="@string/grap"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/button9"
                        style="@style/for_medium_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="170sp"
                        android:layout_height="40sp"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/shape_radius"
                        android:backgroundTint="@color/white"
                        android:text="@string/archi"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/button10"
                        style="@style/for_medium_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="110sp"
                        android:layout_height="40sp"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/shape_radius"
                        android:backgroundTint="@color/white"
                        android:text="@string/ui_ux"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/button11"
                        style="@style/for_medium_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="150sp"
                        android:layout_height="40sp"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/shape_radius"
                        android:backgroundTint="@color/white"
                        android:text="@string/photo"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />


                </LinearLayout>


            </HorizontalScrollView>

            <LinearLayout
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hor3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15sp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView27"
                        app:srcCompat="@drawable/_23123"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/for_images" />


                    <ImageView
                        app:srcCompat="@drawable/unsplash_7o7m1xceiy8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/for_images" />

                    <ImageView
                        android:id="@+id/imageView36"
                        app:srcCompat="@drawable/unsplash_z_btarfy6ksgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/for_images" />

                    <ImageView
                        app:srcCompat="@drawable/unsplash_qvwxzexlxge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/for_images" />

                    <ImageView
                        app:srcCompat="@drawable/unsplash_kb3r2qbaj4ogroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/for_images" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:orientation="vertical">

                    <ImageView
                        app:srcCompat="@drawable/unsplash_qvwxzexlxge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/for_images" />


                    <ImageView
                        app:srcCompat="@drawable/unsplash_kb3r2qbaj4ogroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/for_images" />

                    <ImageView
                        app:srcCompat="@drawable/unsplash_7o7m1xceiy8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/for_images" />

                    <ImageView
                        android:id="@+id/imageView37"
                        app:srcCompat="@drawable/unsplash_z_btarfy6ksgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/for_images" />

                    <ImageView
                        android:id="@+id/imageView238"
                        app:srcCompat="@drawable/_23123"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/for_images" />
                </LinearLayout>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>